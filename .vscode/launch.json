{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Client",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/client",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:dev"],
      "console": "integratedTerminal"
    },
    {
      "name": "Watch Common",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/common",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "watch"],
      "console": "integratedTerminal"
    },
    {
      "name": "Watch API",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/api",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "watch"],
      "console": "integratedTerminal"
    },
    {
      "name": "API",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/api",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:dev"],
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/*"],
      "outFiles": [
        "${workspaceFolder}/packages/api/dist/**/*.js",
        "${workspaceFolder}/packages/common/dist/**/*.js"
      ],
      "sourceMaps": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Attach to API",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "restart": true
    }
  ],
  "compounds": [
    {
      "name": "DEV",
      "configurations": ["Client", "Watch Common", "Watch API", "API"],
      "stopAll": false
    }
  ]
}
