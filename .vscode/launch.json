{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Client",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/client",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:dev"]
    },
    {
      "name": "Watch Common",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/common",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "watch"],
      "console": "integratedTerminal" // otherwise the tsc --watch output is not visible in DEBUG CONSOLE
    },
    {
      "name": "Watch API",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/api",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "watch"],
      "console": "integratedTerminal" // otherwise the tsc --watch output is not visible in DEBUG CONSOLE
    },
    {
      "name": "API",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/api",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:dev"],
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/*"],
      "outFiles": ["${workspaceFolder}/packages/api/dist/**/*.js"],
      "sourceMaps": true
    },
    {
      "name": "Attach to API",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "restart": true
    }
  ],
  "compounds": [
    {
      "name": "DEV",
      "configurations": ["Client", "Watch Common", "Watch API", "API"],
      "stopAll": false
    }
  ]
}
